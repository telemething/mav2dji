{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "catkin build -DCMAKE_BUILD_TYPE=Debug -j16",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": 
            {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": 
                {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
                }
            }         
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "catkin clean --yes"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "catkin config --no-install && catkin build --verbose --catkin-make-args run_tests | sed -n '/\\[==========\\]/,/\\[==========\\]/p'"
        },
        {
            "label": "release",
            "type": "shell",
            "command": "sudo checkinstall --install=no catkin build -j16 --cmake-args -DCMAKE_BUILD_TYPE=Release"
        }

    ]
}
